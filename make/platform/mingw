include make/platform/linux

###############################################################################

IDMODULE.suffix = _mp_x86.dll

###############################################################################

DYNLOAD.l  =
MATH.l     =
IPHLPAPI.l = iphlpapi
ADVAPI.l   = advapi32

###############################################################################

# MinGW-w64 cross-compiler for Windows 32-bit
# Install on Ubuntu/Debian: sudo apt-get install mingw-w64
GCC/ = /usr/

CXX = $(GCC/)bin/i686-w64-mingw32-g++
AR  = /usr/bin/i686-w64-mingw32-ar

CXX.opt.PIC =
CXX.opt.vis =

CXX.ldopts.so = -shared

###############################################################################

SPECIALS.name =  win32
SPECIALS.build = build.mingw
